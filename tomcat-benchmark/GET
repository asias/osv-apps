#!/bin/bash

VER=osv-v1

if [ ! -e ${VER}.tar.gz ];then
    wget https://github.com/asias/FrameworkBenchmarks/archive/${VER}.tar.gz
fi
mkdir -p ROOTFS/usr/tomcat/webapps/
rm -rf FrameworkBenchmarks
tar xvf ${VER}.tar.gz
mv FrameworkBenchmarks-${VER} FrameworkBenchmarks
cp -av context.xml FrameworkBenchmarks/servlet/src/main/webapp/META-INF/context.xml
cd FrameworkBenchmarks/servlet
mvn clean install
cp -av target/servlet.war ../../ROOTFS/usr/tomcat/webapps
